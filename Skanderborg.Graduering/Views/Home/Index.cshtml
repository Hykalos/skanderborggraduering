@{
    ViewData["Title"] = "Home Page";
}
@model bool

<h1 class="display-4">Gradueringsdiplomgenerator</h1>

<h2>Upload CSV</h2>

<form enctype="multipart/form-data" method="post" asp-action="UploadFile">
    <div class="form-group">
        <label for="csv">Csv-fil</label>
        <input name="file" type="file" />
    </div>

    <input class="btn btn-success" type="submit" value="Upload" />
</form>

<h2>Login</h2>

@if(Model)
{
    <div class="alert alert-warning" role="alert">
        Dit login var enten forkert eller har ikke rettigheder til at se og eksportere medlemslisten
    </div>
}


<form method="post" asp-action="LoginAndFetchFile">
    <div class="form-group">
        <label for="username">Brugernavn</label>
        <input name="Username" type="text" id="username" class="form-control" required placeholder="Indtast brugernavn" />
    </div>

    <div class="form-group">
        <label for="username">Kodeord</label>
        <input name="Password" type="password" id="password" class="form-control" required placeholder="Indtast kodeord" />
    </div>

    <input class="btn btn-success" type="submit" value="Login" />
</form>